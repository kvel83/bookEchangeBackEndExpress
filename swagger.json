{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "BooksExchange API",
        "description": "BooksExchange API",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:3000",
    "basePath": "/",
    "tags": [
        {
            "name": "Autenticacion",
            "description": "Api para autenticaci√≥n y registro de usuarios"
        },
        {
            "name": "Books by user",
            "description": "Api para relacionar libros con cada usuario y sus operaciones sobre los mismos"
        }
    ],
    "definitions": {
        "RoleModel": {
            "required": ["name", "type"],
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "number"
                }
            }
        },
        "UserModel": {
            "required": ["userName", "userEmail", "userPassword", "userAge", "role"],
            "properties": {
                "userName": {
                    "type": "string",
                    "uniqueItems": true
                },
                "userEmail": {
                    "type": "string"
                },
                "userPassword": {
                    "type": "string"
                },
                "userAge": {
                    "type": "number"
                },
                "role": {
                    "type": "number"
                }
            }
        },
        "Users": {
            "type": "object",
            "$ref": "#/definitions/UserModel"
        },
        "Books": {
            "required": ["bookName", "bookAuthor", "bookEditorial", "bookPages", "bookClasification", "bookISBN", "bookDescription"],
            "properties": {
                "bookName": {
                    "type": "string"
                },
                "bookAuthor": {
                    "type": "string"
                },
                "bookEditorial": {
                    "type": "string"
                },
                "bookPages": {
                    "type": "number"
                },
                "bookClasification": {
                    "type": "string"
                },
                "bookISBN": {
                    "type": "string"
                },
                "bookDescription": {
                    "type": "string"
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "in": "header",
                "name": "Authorization",
                "description": "Bearer token to access these api endpoints",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/api/auth/signup": {
            "post": {
                "tags": ["Autenticacion"],
                "description": "Registro de un nuevo usuario",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "Usuario",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/UserModel"
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "Nuevo usuario es registrado",
                        "schema": {
                            "$ref": "#/definitions/UserModel"
                        }
                    }
                }
            }
        },
        "/api/auth/signin": {
            "post": {
                "tags": ["Autenticacion"],
                "description": "Login de un usuario",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "Usuario",
                        "required": true,
                        "properties": {
                            "userName": {
                                "type": "string",
                                "uniqueItems": true
                            },
                            "userPassword": {
                                "type": "string"
                            }
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "Nuevo usuario es registrado",
                        "schema": {
                            "$ref": "#/definitions/UserModel"
                        }
                    }
                }
            }
        },
        "/api/userBook/getAllBooks/{id}": {
            "get": {
                "tags": ["Books by user"],
                "description": "Obtiene los libros de un usuario",
                "parameters": [
                    {
                        "name": "authorization",
                        "in": "header",
                        "description": "AccessToken",
                        "required": true
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del usuario",
                        "required": true,
                        "type": "string"
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "Arreglo de libros de un usuario",
                        "schema": {
                            "type": "array",
                            "items":{
                                "$ref": "#/definitions/Books"
                            }
                        }
                    }
                }
            }
        },
        "/api/userBook/getBookById/{bookId}": {
            "get": {
                "tags": ["Books by user"],
                "description": "Obtiene los datos de 1 libro de un usuario",
                "parameters": [
                    {
                        "name": "authorization",
                        "in": "header",
                        "description": "AccessToken",
                        "required": true
                    },
                    {
                        "name": "bookId",
                        "in": "path",
                        "description": "ID del libro",
                        "required": true,
                        "type": "string"
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "Datos de un libro",
                        "schema": {
                                "$ref": "#/definitions/Books"
                        }
                    }
                }
            }
        },
        "/api/userBook/addBook/{id}": {
            "post": {
                "tags": ["Books by user"],
                "description": "Asocia un libro a un usuario, si no existe en los registros se agrega",
                "parameters": [
                    {
                        "name": "authorization",
                        "in": "header",
                        "description": "AccessToken",
                        "required": true
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id del usuario",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "book",
                        "in": "body",
                        "description": "Datos del libro",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Books"
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "Arreglo de libros de usuario",
                        "schema": {
                            "type": "array",
                            "items":{
                                "$ref": "#/definitions/Books"
                            }
                        }
                    }
                }
            }
        },
        "/api/userBook/deleteBook/{id}": {
            "delete": {
                "tags": ["Books by user"],
                "description": "Borra un libro asociado a un usuario",
                "parameters": [
                    {
                        "name": "authorization",
                        "in": "header",
                        "description": "AccessToken",
                        "required": true
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id del usuario",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "bookISBN",
                        "in": "body",
                        "description": "ISBN del libro",
                        "required": true,
                        "properties":{
                            "bookISBN":{
                                "type": "string"
                            }
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "Arreglo de libros de usuario",
                        "schema": {
                            "type": "array",
                            "items":{
                                "$ref": "#/definitions/Books"
                            }
                        }
                    }
                }
            }
        }
    }
}

